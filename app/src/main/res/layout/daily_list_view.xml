<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="4dp"
    android:background="#A4ABBD"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="16dp"
    app:cardCornerRadius="8dp"
    android:id="@+id/daily_card">
<RelativeLayout
        android:id="@+id/daily_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/daily_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="3dp"
            android:text="28"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/daily_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/daily_day"
            android:layout_toRightOf="@+id/daily_day"
            android:text="2020.07"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/daily_day_name"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/daily_date"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/daily_day"
            android:background="@color/app_theme"
            android:gravity="center_horizontal"
            android:text="Wed"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/expense_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:text="Brunch with me"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:background="@color/app_theme"/>

        <TextView
            android:id="@+id/spend_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/daily_day_name"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="13dp"
            android:text="Spent:"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/spend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/daily_day_name"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="1dp"
            android:layout_toRightOf="@id/spend_text"
            android:text="Ksh. 300"
            android:textStyle="bold"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="13sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>